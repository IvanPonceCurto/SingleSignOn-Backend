{
  "swagger": "2.0",
  "info": {
    "description": "",
    "version": "1.0.0",
    "title": "Swagger Integración de Aplicaciones 2021"
  },
  "host": "",
  "basePath": "/v2",
  "tags": [
    {
      "name": "Single Sign On Backend",
      "description": "Operations about sso tokens",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/user/register": {
      "post": {
        "description": "Creates a new user with the specific tenant from the request",
        "tags": ["Registrar usuarios en tenants"],
        "summary": "Registra un usuario en un tenant específico según el Request.",
        "operationId": "registerUser",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "description": "User object that needs to be registered in the DataBase",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserTenant"
            }
          }
        ],
        "responses": {
          "201": {
            "type": "object",
            "schema": { "$ref": "#/definitions/UserRegisteredResponse" }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/GeneralError"
              }
            }
          }
        },
        "security": [
          {
            "tenant_auth": ["write:UserTenant"]
          }
        ]
      }
    },
    "/user/login": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Get JWT Token from a Valid User",
        "description": "A status 200 with a JWT will be returned when this endpoint is called",
        "operationId": "externalLogin",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "description": "User object that needs to be verified if exists or not",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserRequestLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/UserVerifiedResponse"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/ErrorBusiness"
            }
          }
        }
      },
      "security": [
        {
          "tenant_auth": ["read:UserRequestLogin"]
        }
      ]
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "UserTenant": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "tenant": {
          "type": "string"
        },
        "admin": {
          "type": "string"
        }
      }
    },

    "GeneralError": {
      "type": "object",
      "properties": {
        "msg": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "param": {
              "type": "string"
            },
            "location": {
              "type": "string"
            }
          }
        }
      }
    },
    "UserRequestLogin": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "tenant": {
          "type": "string"
        }
      }
    },
    "ErrorBusiness": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "status": { "type": "string" }
      }
    },
    "UserVerifiedResponse": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "redirect": {
          "type": "string"
        }
      }
    },
    "UserRegisteredResponse": {
      "type": "object",
      "properties": {
        "user": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "tenant": { "type": "string" },
            "name": { "type": "string" },
            "last_name": { "type": "string" },
            "admin": { "type": "string" },
            "_id": { "type": "string" },
            "__v": { "type": "string" }
          }
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}
